@model IEnumerable<Limbs.Web.Entities.Models.AmbassadorModel>

@{
    ViewBag.Title = "Ambassadors";
}

<h2>Ambassadors</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmbassadorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Url.Action("Details", new { id = item.Id })">@Html.DisplayFor(modelItem => item.UserId)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmbassadorName)
            </td>
            <td>
                @Html.ActionLink(item.Email, "Create", new { to = item.UserId, controller = "Messages", area = "Admin", })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, area = "Admin" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, area = "Admin" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, area = "Admin" })
            </td>
        </tr>
    }

</table>
