@model Limbs.Web.Models.ResetPasswordViewModel


<div id="cont" class="min_full">
    <div id="cont-form">
        <div class="inicio-form-r">
            <h4>Ingrese su mail y la contraseña nueva.</h4>
        </div>
        <div class="cont_regis">

            <p id="post-form-ini">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group">
                        <label>Mail</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-regis" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Contraseña nueva</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "input-regis" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Confirmar contraseña</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-regis" })
                        </div>
                    </div>
                    <br />
                <p>
                    <button type="submit" class="bn_blue">Cambiar contraseña</button>
                </p>
                }
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }