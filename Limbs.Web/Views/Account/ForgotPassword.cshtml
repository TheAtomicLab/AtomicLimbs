@model Limbs.Web.Entities.WebModels.ForgotPasswordViewModel

@{
    ViewBag.Title = Limbs.Web.Resources.AccountTexts.ForgotPassword_ViewBag_Title;
}

<div id="cont" class="min_full">
    <div id="cont-form">
        <div class="inicio-form-r">
            <h4>@Limbs.Web.Resources.AccountTexts.ForgotPassword_inicio_form_r_h4</h4>
        </div>
        <div class="cont_regis">

            <p id="post-form-ini">

                @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input-regis", @placeholder = @Limbs.Web.Resources.AccountTexts.ForgotPassword_EmailTextBox })
                        </div>
                    </div>
                <p>
                    <button type="submit" class="bn_blue" name="recoverPassword">@Limbs.Web.Resources.AccountTexts.ForgotPassword_inicio_form_r_h4</button>
                </p>
            }
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }