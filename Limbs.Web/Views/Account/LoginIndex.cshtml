@model Limbs.Web.Models.UserModel
<!DOCTYPE html>
<html>
<head>
    <title>Limbs | Atomic Lab</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="../../Content/estilo01.css">
    <link rel="stylesheet" type="text/css" href="../../Content/estilo02.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <script src="../../Scripts/jquery-3.2.1.js"></script>
    <link rel='shortcut icon' type='image/x-icon' href='img/favicon.ico' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Ingresar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
    <header>
        <div id="main_head">
            <a href="index.php"><img id="logo_head" src="img/limbs_white.svg"></a>
            <nav>
                <li><a onclick='cerrarmenu()' href="home.php">Inicio</a></li>
                <li><a onclick='cerrarmenu()' href="pedir_una_mano.php">Pedir una mano</a></li>
                <li><a onclick='cerrarmenu()' href="http://www.limbs.earth/" target="_blank">¿Qué es Limbs?</a></li>
            </nav>
            <img src="img/menu.svg" id="menu_mobil" onclick="abrirmenu()">
        </div>
        <div id="menu_perfil">
            <div id="icono_perfil"></div>
            <ul id="opciones_perfil">
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                <li class="cerrar_sesion"><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
            </ul>
        </div>
    </header>
    <div id="cont" class="min_full">
        <article id="home">
            <h1>Hola @User.Identity.GetUserName()</h1>
            <a href="/Orders/Create"><button id="home_pedir" class="blue_button">Pedir una mano</button></a>
            <article id="tus_pedidos">
                <h2>Tus pedidos:</h2>
                <table>
                    <tr>
                        <th>Fecha de solicitud</th>
                        <th>Número de pedido</th>
                        <th>Estado</th>
                    </tr>
                    <tr>
                        <td>10/05/2017</td>
                        <td>125623</td>
                        <td>Pendiente</td>
                    </tr>
                    <tr>
                        <td>05/02/2017</td>
                        <td>125210</td>
                        <td>Entregada</td>
                    </tr>
                </table>
            </article>
        </article>

    </div>
    <script src="../../Scripts/menu.js"></script>
</body>
</html>
