@using Limbs.Web.Resources
@model Limbs.Web.Entities.Models.OrderModel

@{
    ViewBag.Title = OrdersTexts.BrazoImagen_ViewBag_title;
}

@section scripts
{
    <script src="~/Scripts/pages/orders.js"></script>
    <script src="~/Scripts/pages/uploadImage.js"></script>
    <script src="~/Scripts/dropzone.js"></script>
    <link rel="stylesheet" href="~/Content/basic.css">
    <link rel="stylesheet" href="~/Content/dropzone.css">
}


<div class="min_full" id="cuerpo_pedir">
    <article id="exp_inicial" class="brazo card center-card-l">
        <p class="form_title">@OrdersTexts.BrazoImagen_form_title</p>
        <p id="bajada_exp">@OrdersTexts.BrazoImage_bajada_exp</p>
        <div id="recomendaciones_foto">
            <div class="card requisitos">
                <div>
                    <p>@OrdersTexts.BrazoImagen_cardRequisitos</p>
                </div>
                <div>
                    <ul>
                        <li>@OrdersTexts.BrazoImagen_req1</li>
                        <li>@OrdersTexts.BrazoImagen_req2</li>
                        <li>@OrdersTexts.BrazoImagen_req3</li>
                        <li>@OrdersTexts.BrazoImagen_req4</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="ejemplos_carga">
            <div id="ej_si" class="ej_exp card">
                <p class="azulAtomicTx">@OrdersTexts.BrazoImagen_ej_si</p>
                <ul>
                    <li></li>
                    <li></li>
                </ul>
            </div>
            <div id="ej_no" class="ej_exp card">
                <p>BrazoImagen_ej_no</p>
                <ul>
                    <li></li>
                    <li></li>
                </ul>
            </div>
        </div>
        <div>
            @using (Html.BeginForm("UploadImageUser", "Orders", FormMethod.Post, new { enctype = "multipart/form-data", @class = "dropzone", @id = "formManoMedidas" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.AmputationType)
                @Html.HiddenFor(x => x.ProductType)
            }
            <button id="enviar" name="enviar" class="bn_blue" onclick="this.form.submit(); this.disabled=true;">@OrdersTexts.BrazoImagen_enviarButton</button>
       </div>
    </article>
</div>
