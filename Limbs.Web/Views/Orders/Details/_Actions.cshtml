@using Limbs.Web.Entities.Models
@model OrderModel

<div id="accion_pedido">
    @if (User.IsInRole(AppRoles.Ambassador) || User.IsInRole(AppRoles.Administrator))
    {
        if (Model.Status == OrderStatus.PreAssigned)
        {
            <a href="@Url.Action("EditStatus", "Orders", new {area = "Admin", orderId = Model.Id, newStatus = OrderStatus.Pending})" class="blue_button">Aceptar pedido</a>
            <a href="@Url.Action("EditStatus", "Orders", new {area = "Admin", orderId = Model.Id, newStatus = OrderStatus.NotAssigned})" class="blue_button">Rechazar pedido</a>
        }
        else if (Model.Status == OrderStatus.Pending)
        {
            <a href="#" class="blue_button">Descargar archivos</a>
            if (Model.Pieces.Ready())
            {
                <a href="@Url.Action("EditStatus", "Orders", new {area = "Admin", orderId = Model.Id, newStatus = OrderStatus.Ready})" class="blue_button">Terminé de imprimir</a>
            }
        }
        else if (Model.Status == OrderStatus.Ready)
        {
            <a href="@Url.Action("EditStatus", "Orders", new {area = "Admin", orderId = Model.Id, newStatus = OrderStatus.Delivered})" class="blue_button">Ya entregué el pedido</a>
        }
        <script type="text/javascript">
            $("#accion_pedido a").click(function(e) {
                e.stopPropagation();
                e.preventDefault();

                $("body").append('<form action="' + e.target.href + '" method="post" id="tempform"></form>');
                $("#tempform").submit();
            });
        </script>
    }
    @if (Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.Ready || Model.Status == OrderStatus.Delivered)
    {
        <a href="@Url.Action("Create", "Messages", new {area = "", orderId = Model.Id})" class="blue_button">Enviar mensaje</a>
    }
    <a href="@Url.Action("Index", "Home")" class="blue_button">Volver</a>
</div>