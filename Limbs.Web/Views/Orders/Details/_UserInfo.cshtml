@using Limbs.Web.Entities.Models
@model OrderModel

<h3>Datos del usuario</h3>
<table class="tabla_datos">
    <tr>
        <td>Nombre:</td>
        <td>@Model.OrderRequestor.FullName()</td>
    </tr>
    @if (User.IsInRole(AppRoles.Administrator))
    {
        <tr>
            <td>DNI o Pasaporte:</td>
            <td>@Model.OrderRequestor.Dni</td>
        </tr>
    }
    @if (!User.IsInRole(AppRoles.Ambassador))
    {
        <tr>
            <td>Email:</td>
            <td>@Model.OrderRequestor.Email</td>
        </tr>
    }
    <tr>
        <td>Nacimiento:</td>
        <td>@Model.OrderRequestor.Birth.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <td>País:</td>
        <td>@Model.OrderRequestor.Country</td>
    </tr>
    <tr>
        <td>Ciudad:</td>
        <td>@Model.OrderRequestor.City</td>
    </tr>
    @if (!User.IsInRole(AppRoles.Ambassador))
    {
        <tr>
            <td>Dirección:</td>
            <td>@Model.OrderRequestor.FullAddress()</td>
        </tr>
        <tr>
            <td>Teléfono:</td>
            <td>@Model.OrderRequestor.Phone</td>
        </tr>
    }
</table>