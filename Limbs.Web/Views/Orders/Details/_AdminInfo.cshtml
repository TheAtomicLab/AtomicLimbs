@using Limbs.Web.Common.Extensions
@using Limbs.Web.Entities.Models
@model Limbs.Web.Entities.Models.OrderModel

@if (User.IsInRole(AppRoles.Administrator))
{
    <table class="tabla_datos">
        <tr>
            <td>Log:</td>
            <td>
                <ul class="log">
                    @foreach (var item in Model.Log)
                    {
                        <li>
                            <span>@item.Date.ToFriendlyDateString()</span> -
                            <span>@item.User</span> -
                            <span>@item.Message</span>
                        </li>
                    }
                    <li>
                        @Html.ActionLink("Descargar log", "LogCsvExport", new { orderId = Model.Id, controller = "Orders", area = "Admin" })
                    </li>
                </ul>
            </td>
        </tr>
    </table>
}