@model Limbs.Web.Models.OrderModel

@section scripts
{
    <script type="text/javascript">
        $("#fileUpload").bind("change",
            function() {
                if (this.files[0].size > 1000000 * 5) {
                    alert("Seleccione un archivo menor a 5 MB.");
                    this.value = null;
                }
            });
    </script>
}
<div class="min_full" id="cuerpo_pedir">
    <article id="exp_inicial">
        <h1>Nueva solicitud:</h1>

        @using (Html.BeginForm("ManoPedir", "Orders", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            <h2 class="f-titulo">Seleccioná tu amputación</h2>

            <div id="tipo_de_amp">
                @Html.EditorFor(x => x.AmputationType)
            </div>
            <p>
                @Html.ValidationMessageFor(x => x.AmputationType)
            </p>

            <div>
                @Html.EditorFor(x => x.ProductType)
            </div>
            <p>
                @Html.ValidationMessageFor(x => x.ProductType)
            </p>

            <div>
                <input id="enviar" type="submit" name="enviar" value="Siguiente" class="blue_button">
            </div>
        }
    </article>
</div>