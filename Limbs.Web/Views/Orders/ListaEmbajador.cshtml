@model Limbs.Web.ViewModels.EmbajadorOrderListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    if (Model.PendingToAssignOrders.Count() > 0)
    {
        <h3>Pedidos pendientes de asignacion</h3>

        <table class="table">
            <tr>
                <th></th>
                <th>Nombre solicitante</th>
                <th>Comentarios</th>
                <th>Estado</th>
                <th></th>
            </tr>

            @foreach (var item in Model.PendingToAssignOrders)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Orders", new { Id = item.Id }, null)" class="btn btn-primary btn-sm">Ver detalles</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderRequestor.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Aceptar", "Accept", "Orders", new { id = item.Id }, null) |
                        @Html.ActionLink("Rechazar", "Reject", "Orders", new { id = item.Id }, null)
                    </td>
                </tr>
            }

        </table>
    }
}

<h3>Mis pedidos</h3>


<table class="table">
    <tr>
        <th></th>
        <th>Nombre solicitante</th>
        <th>Comentarios</th>
        <th>Estado</th>
    </tr>

    @foreach (var item in Model.AssignedOrders)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Orders", new { Id = item.Id }, null)" class="btn btn-primary btn-sm">Ver detalles</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderRequestor.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }

</table>
