@model Limbs.Web.ViewModels.EmbajadorOrderListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    if (Model.PendingToAssignOrders.Count() > 0)
    {
        <h3>Pedidos pendientes de asignacion</h3>

        <table class="table">
            <tr>
                <th></th>
                <th>Nombre solicitante</th>
                <th>Comentarios</th>
                <th>Estado</th>
                <th></th>
            </tr>

            @foreach (var order in Model.PendingToAssignOrders)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Orders", new { Id = order.Id }, null)" class="btn btn-primary btn-sm">Ver detalles</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => order.OrderRequestor.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => order.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => order.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Aceptar", "Assignation", "Orders", new { id = order.Id, accion = "aceptar" }, null) |
                        @Html.ActionLink("Rechazar", "Assignation", "Orders", new { id = order.Id, accion = "rechazar" }, null)
                    </td>
                </tr>
            }

        </table>
    }
}

<h3>Mis pedidos</h3>


<table class="table">
    <tr>
        <th></th>
        <th>Nombre solicitante</th>
        <th>Comentarios</th>
        <th>Estado</th>
    </tr>

    @foreach (var item in Model.AssignedOrders)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Orders", new { Id = item.Id }, null)" class="btn btn-primary btn-sm">Ver detalles</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderRequestor.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }

</table>
