@using System.Configuration
@using Limbs.Web.Entities.Models
<header>
    <div id="main_head">
        <a href="/">
            <img id="logo_head" src="/Content/img/limbs_white.svg">
            @if (Request.IsLocal)
            {<span style="position: absolute; left: 0; color: burlywood;">DEV</span>}
            @if (!string.IsNullOrWhiteSpace(ConfigurationManager.AppSettings["Environment"]))
            {<span style="position: absolute; left: 0; color: burlywood; top: 15px;">@ConfigurationManager.AppSettings["Environment"]</span>}
        </a>
        <nav>
            <ul>
                <li>
                    <a onclick="cerrarmenu()" href="/">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.HeaderText1)</a>
                </li>
                @if (User.IsInRole(AppRoles.Requester))
                {
                    <li>
                        <a name="manoPedir" onclick="cerrarmenu()" href="@Url.Action("ManoPedir", "Orders")">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.HeaderText2)</a>
                    </li>
                }
                @if (User.IsInRole(AppRoles.Ambassador))
                {
                    <li>
                        <a name="comunidad" onclick="cerrarmenu()" href="http://facebook.com/groups/AtomicLabEmbajadores" target="_blank">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.HeaderText3)</a>
                    </li>

                    <li>
                        <a name="manual" onclick="cerrarmenu()" href="http://atomiclab.org/limbs/ambassadors/manual" target="_blank">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.HeaderText4)</a>
                    </li>
                }
                <li>
                    @Html.ActionLink("¿Qué es Limbs?", "QueEsLimbs", "StaticContent", null, null, "pedir", null, null)
                </li>
                <li>
                    <a onclick="cerrarmenu()" href="@Url.Action("Donar","StaticContent")" target="_blank">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.HeaderText5)</a>
                </li>

                @Html.Partial("AdminMenu")
            </ul>
        </nav>
        <img src="/Content/img/menu.svg" id="menu_mobil" onclick="abrirmenu()">
    </div>
    @Html.Partial("_LoginPartial")
</header>