@using System.Configuration
@using Limbs.Web.Entities.Models
<header>
    <div id="main_head">
        <a href="/">
            <img id="logo_head" src="/Content/img/limbs_white.svg">
            @if (Request.IsLocal)
            {<span style="position: absolute; left: 0; color: burlywood;">DEV</span>}
            @if (!string.IsNullOrWhiteSpace(ConfigurationManager.AppSettings["Environment"]))
            {<span style="position: absolute; left: 0; color: burlywood; top: 15px;">@ConfigurationManager.AppSettings["Environment"]</span>}
        </a>
        <nav>
            <ul>
                <li>
                    <a onclick="cerrarmenu()" href="/">Inicio</a>
                </li>
                @if (!Request.IsAuthenticated)
                {
                    <li class="mobile_menu_only">
                        <a onclick="cerrarmenu()" href="@Url.Action("Login", "Account")">Iniciar sesión</a>
                    </li>
                    <li class="mobile_menu_only">
                        <a onclick="cerrarmenu()" href="@Url.Action("Register", "Account")">Registrarse</a>
                    </li>
                    <li>
                        <a name="manoPedir" onclick="cerrarmenu()" href="@Url.Action("Pedir", "Help")">Pedir una prótesis</a>
                    </li>
                }
                @if (User.IsInRole(AppRoles.Requester))
                {
                    <li>
                        <a name="manoPedir" onclick="cerrarmenu()" href="@Url.Action("ManoPedir", "Orders")">Pedir una prótesis</a>
                    </li>
                }
                @if (User.IsInRole(AppRoles.Ambassador))
                {
                    <li>
                        <a name="comunidad" onclick="cerrarmenu()" href="http://facebook.com/groups/AtomicLabEmbajadores" target="_blank">Comunidad de Embajadores</a>
                    </li>

                    <li>
                        <a name="manual" onclick="cerrarmenu()" href="http://atomiclab.org/limbs/ambassadors/manual" target="_blank">Manual</a>
                    </li>
                }
                <li>
                    @Html.ActionLink("Preguntas frecuentes", "faq", "StaticContent", null, null, null, null, null)
                </li>
                <li>
                    <a onclick="cerrarmenu()" href="@Url.Action("Donar","StaticContent")" target="_blank">Donar</a>
                </li>

                @Html.Partial("AdminMenu")
            </ul>
        </nav>
        <img src="/Content/img/menu.svg" id="menu_mobil" onclick="abrirmenu()">
    </div>
    @Html.Partial("_LoginPartial")
</header>