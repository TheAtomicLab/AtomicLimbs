@using Limbs.Web.Common.Extensions
@using Limbs.Web.Entities.Models
@model ProductType
@{
    var values = Enum.GetValues(ViewData.ModelMetadata.ModelType).Cast<ProductType>()
        .Select(v => new SelectListItem
        {
            Selected = v.Equals(Model),
            Text = v.ToDescription(),
            Value = v.ToString()
        });
}

@Html.DropDownList("", values, ViewData["htmlAttributes"])