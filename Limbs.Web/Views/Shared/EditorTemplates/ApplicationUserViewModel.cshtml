@model Limbs.Web.Entities.WebModels.Admin.Models.ApplicationUserViewModel
@{
    IEnumerable<SelectListItem> users = ViewBag.Users ?? new List<SelectListItem>();
}
@if (users.Any())
{
    @Html.DropDownListFor(x => x.Id, users)
}
else if (Model != null)
{
    <p>@Model.Email</p>
    
    @Html.HiddenFor(x => Model.Id)
    @Html.HiddenFor(x => Model.Email)
}
else
{
    <!-- ApplicationUserViewModel.cshtml (Model == null) -->
}