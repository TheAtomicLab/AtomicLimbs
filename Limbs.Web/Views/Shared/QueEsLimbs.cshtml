@using Limbs.Web.Models
@using Limbs.Web.Common

@model LoginViewModel
@{
    ViewBag.Title = "";
}
<head>

</head>
@section styles
{
    <style>
        .cont-wr {
            max-width: initial;
            padding: 0px;
        }

        .min-full {
            background-color: white;
        }
    </style>
    <link rel="stylesheet" href="~/Content/style.css">
}
<div id="inicio">
    <div class="primero_ini">
        <div id="cont_inicio">
            <div>
                <img src="~/Content/img/limbs_white.svg" alt="logo atomic lab">
            </div>
            @if (!Request.IsAuthenticated)
            {
                <div>
                    <a href="@Url.Action("Login", "Account")" class="bn_blue">Iniciar sesión</a>
                </div>
                <div>
                    <a href="@Url.Action("Register", "Account")" id="registrarse_button">Registrarse</a>
                </div>
            }
        </div>
    </div>

    <div class="texto_inicio">
        <h1>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexTitle1)</h1>
        <p>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexContent1)</p>
    </div>
</div>
<div id="pedir">
    <div class="cont_pedir">
        <div class="imagen_pedir">
            <div class="cuadrado azulAtomicBG">
                <h1>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexTitle2)</h1>
            </div>
            <img src="/Content/img/foto01.jpg" height="400" width="300" />
        </div>

        <center>

            <p class="text">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexContent2)</p>
            <div class="link">
                <a href="@Url.Action("Register", "Account")" class="boton">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAction1)</a>
            </div>
            <div class="link">
                <a class="azulAtomicTx" href="http://atomiclab.org/faq" target="_blank">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexFaq)</a>
            </div>
        </center>
    </div>
</div>
<div id="embajadores">
    <section class="container">
        <div class="half-left">
            <img src="~/Content/img/icon_embajador.svg" class="embajadores-logo" />
        </div>
        <div class="half-right">
            <div class="texto_embajadores">
                <h1>
                    @Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAmbassadors1)
                </h1>
            </div>
        </div>
    </section>
    <div class="body-embajadores">
        <p>
            @Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAmbassadors2)
        </p>
    </div>
    <div class="footer-embajadores">
        <div class="link">
            <a href="@Url.Action("Register", "Account")" class="boton-embajadores">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAmbassadors3)</a>
        </div>
    </div>
</div>
<div id="sobre">
    <section class="cont_pedir">
        <div class="texto_inicio">
            <h1>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAbout1)</h1>
            <center>
                @Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexAbout2)
                <br>
            </center>
        </div>
    </section>
</div>
<div id="manoton">
    <div class="texto_manoton">
        <h1>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexManoton)</h1>
        <div class="body-embajadores">
            <center>
                <p>@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexManoton1)</p>
            </center>
        </div>
        <div class="footer-embajadores">
            <div class="link">
                <a class="boton-embajadores" href="http://atomiclab.org/manoton/" target="_blank">@Html.Raw(Limbs.Web.Common.Resources.LimbsResources.IndexManoton2)</a>
            </div>
        </div>
    </div>
</div>
