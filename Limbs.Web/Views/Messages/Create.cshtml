@using Limbs.Web.Entities.Models
@using Microsoft.AspNet.Identity
@model MessageModel
@{
    var to = Model.To.Email;
    if (User.IsInRole(AppRoles.Administrator))
    {
        to += $" - {Model.From.Email}";
    }
    if (to != User.Identity.GetUserName())
    {
        to = Model.From.Email;
    }
    ViewBag.Title = "Mensajes";
}
<h2>@(to)</h2>
@if (Model.Order != null)
{
    <a href="@Url.Action("Details", "Orders", new { id = Model.Order.Id })" class="bn_blue">Ir al pedido</a>
}
<div class="messages-details">
    <div class="messages">
        <ul id="messages" style="display: none;"></ul>
    </div>

    <div class="reply">
        
        @using (Html.BeginForm("Create", "Messages", FormMethod.Post, new { id = "reply-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Order.Id)
            @Html.Hidden(Html.NameFor(x => x.From.Id).ToString(), Model.From.Id)
            @Html.Hidden(Html.NameFor(x => x.To.Id).ToString(), Model.To.Id)

            <div>
                @Html.EditorFor(model => (new MessageModel()).Content)
                <input type="submit" value="Enviar" />
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        }
    </div>
</div>

@section styles
{
    <style type="text/css">
        .cont-wr {
            margin-top: 0;
            margin-bottom: 0;
            padding-top: 0;
            padding-bottom: 0;
        }
    </style>
}